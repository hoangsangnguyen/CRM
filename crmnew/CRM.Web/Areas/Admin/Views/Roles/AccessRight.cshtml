@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles
{
    @Styles.Render("~/Content/Multiorg_kendo_css")
    <link href="~/Content/style.kendo.edit.css" rel="stylesheet" />
    <link href="~/Content/multiorg.edit.css" rel="stylesheet" />
    <style>
            /*
        Max width before this PARTICULAR table gets nasty
        This query will take effect for any screen smaller than 760px
        and also iPads specifically.
        */
            @@media only screen and (max-width: 760px), (min-device-width: 768px) and (max-device-width: 800px) {
                /* Force table to not be like tables anymore */
                table, thead, tbody, th, td, tr {
                    display: block;
                }
                    /* Hide table headers (but not display: none;, for accessibility) */
                    thead tr {
                        position: absolute;
                        top: -9999px;
                        left: -9999px;
                    }

                tr { /* border: 1px solid #ccc;*/
                }

                td {
                    /* Behave  like a "row"

                border-bottom: 1px solid #eee;*/
                    border: none !important;
                    border-bottom: 1px solid #dcdada !important;
                    position: relative;
                    padding-left: 50%;
                }

                table tr td:first-child {
                    background: #e1f3fc !important;
                    color: #6079a3 !important;
                    font-weight: bold !important;
                }

                td:before {
                    /* Now like a table header */
                    position: absolute;
                    /* Top/left values mimic padding */
                    top: 6px;
                    left: 6px;
                    /*width: 45%;  */
                    padding-right: 10px;
                    white-space: nowrap;
                }
                /*
            Label the data
            */
                td:nth-of-type(1):before {
                    content: "";
                }

                td:nth-of-type(2):before {
                    content: "Super admin";
                }

                td:nth-of-type(3):before {
                    content: "Operator";
                }

                td:nth-of-type(4):before {
                    content: "Admin";
                }

                td:nth-of-type(5):before {
                    content: "Sales";
                }

                td:nth-of-type(6):before {
                    content: "Support";
                }

                td:nth-of-type(7):before {
                    content: "Managers";
                }

                td:nth-of-type(8):before {
                    content: "Noraml User";
                }

                table.k-selectable tbody tr:last-child td {
                    border-bottom: solid 1px #ddd;
                }

                    table.k-selectable tbody tr:last-child td:last-child {
                        border-bottom: none !important;
                    }
            }

            @@media only screen and (max-width: 325px), (min-device-width: 250px) and (max-device-width: 325px) {
                .footer .footer-inner .footer-content {
                    padding: 6px !important;
                }
            }

            /* Smartphones (portrait and landscape) ----------- */
    </style>
}

<div id="breadcrumbs" class="breadcrumbs">
    <script type="text/javascript">
        try { multi.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li><i class="multi-icon fa fa-home icon_house"></i></li>
        <li><a href="#">Home</a></li>
        <li><a href="#" title="">Access rights</a></li>
    </ul>
    <!-- /.breadcrumb -->
    <div id="nav-search" class="nav-search">
        <form class="form-search">
            <span class="input-icon">
                <input type="text" autocomplete="off" id="nav-search-input" class="nav-search-input" placeholder="Search ...">
                <i class="multi-icon fa icon_search nav-search-icon"></i>
            </span>
        </form>
    </div>
    <!-- /.nav-search -->
</div>

<div class="page-content">
    <div class="page-header">
        <ul class="btn-top pull-right">
            <li><a href="#" class="save_big" style="display:none">Save</a></li>
            <li><a href="#" class="cancel_big">Cancel</a></li>
        </ul>
        <h1>
            Access rights
            <!--<small> <i class="multi-icon fa arrow_triangle-right"></i> bootstrap grid sizing </small>-->
        </h1>

    </div>
    <div class="center mt60">
        <div class="row">
            <div class="col-xs-12">
                <div class="user-profile row">
                    <!--Grid-->
                    <div id="myGrid"></div>
                    <!--EndGrid-->
                    <div class="space-6"></div>
                    <!--Button-->
                    <div class="align-right">
                        <div class="wr_btn_action wr_btn_action2" style="display:none">
                            <input type="button" class="cancel_big" value="Cancel" />
                        </div>
                        <div class="wr_btn_action wr_btn_action1" style="display:none">
                            <input type="button" class="save_big" value="Save" />
                        </div>
                    </div>
                    <!--Button-->
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/Multiorg_kendo_script")
    <script src="~/Scripts/kendo/2014.1.528/kendo.grid.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.manageUserCL').click();

            if ($('.manageAccessRightAD').size() > 0) {
                $('.manageAccessRightAD').addClass('active');
            }
            if ($('.subAccessRightCL').size() > 0) {
                $('.subAccessRightCL').addClass('activeCL');
            }
        });
    </script>

    <script src="~/Areas/Admin/Scripts/Roles/access_right.js"></script>
}
