@model CRM.Entities.ViewModel.crm_UserInfo
@using Kendo.Mvc.UI;
@{
    ViewBag.Title = "Detail user";
    bool Active = (Model.Active.HasValue) ? Model.Active.Value : false;
}
<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { multi.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li><i class="multi-icon fa fa-home icon_house"></i></li>
        <li><a href="#">Home</a></li>
        <li><a title="" href="/admin/tenant">Manage user</a></li>
        <li class="active">@Model.Username</li>
    </ul>
    <div class="nav-search" id="nav-search">
        <form class="form-search">
            <span class="input-icon">
                <input placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" type="text">
                <i class="multi-icon fa icon_search nav-search-icon"></i>
            </span>
        </form>
    </div>
</div>
<div class="page-content">
    <div class="page-header">
        <ul class="btn-top pull-right">
            <li><input type="button" class="back_big" value="Back" onclick="cancel();" /></li>
        </ul>
        <h1>
            @Model.Username
        </h1>

    </div>
    <div class="center mt60">
        <div class="row">
            <div class="col-xs-12">
                <div class="user-profile row">
                    <div class="col-xs-12 col-sm-4 center hover_edit_box">
                        
                        <div>
                            <span class="profile-picture">
                                @if (!string.IsNullOrEmpty(@Model.Image))
                                {
                                    <img class="editable img-responsive  editable-empty" src="@Url.Content("~/images/avatar/" + @Model.Image)" alt="@Model.Username" />
                                }
                                else
                                {
                                    <img id="imgLogo" class="editable img-responsive  editable-empty" src="@Url.Content("~/images/No_image_available_no_border.png")" alt="@Model.Image" />
                                }
                            </span>

                            <div class="space-12"></div>
                            <div class="width-70 label label-info label-xlg arrowed-in arrowed-in-right">
                                <div class="inline position-relative"> <a class="user-title-label" href="#"> <i class="multi-icon fa icon_pin orange"></i> &nbsp; <span class="white bolder">@Model.Username</span> </a> </div>
                            </div>
                        </div>
                        <div class="space-6"></div>
                        <div class="profile-contact-info">
                            <div class="space-6"></div>
                            <div class="profile-social-links align-center">
                                <a data-original-title="Visit my Facebook" title="" class="tooltip-info" href="@Html.DisplayFor(x=>x.FacebookURL)"> <i class="middle multi-icon fa social_facebook_circle  bigger-190 blue"></i> </a>
                                <a data-original-title="Visit my Twitter" title="" class="tooltip-info" href="@Html.DisplayFor(x=>x.TwitterURL)"> <i class="middle multi-icon fa social_twitter_circle bigger-190 light-blue"></i> </a>
                                <a data-original-title="Visit my Google plus" title="" class="tooltip-error" href="@Html.DisplayFor(x=>x.GoogleplusURL)"> <i class="middle multi-icon fa social_googleplus_circle bigger-190 red"></i> </a>
                                <a data-original-title="Visit my Linkedin" title="" class="tooltip-error" href="@Html.DisplayFor(x=>x.LinkedURL)"> <i class="middle multi-icon fa social_linkedin_circle  bigger-190 blue"></i> </a>
                            </div>
                            <div class="space-6"></div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-8">
                        <div class="align-right">

                            @*<a href="@Url.Action("Index", "User", new { area = "Admin", id = Model.TenantId })" class="btn btn-app btn-sm btn-light"></a>*@
                            @{Html.RenderAction("CountUser", "User", new { area = "Admin", tenantId = @Model.TenantId });}

                            <a href="#" class="btn btn-app btn-sm btn-yellow">
                                <span class="line-height-1 bigger-170"> 32 </span> <br>
                                <i class="menu-icon fa icon_piechart"></i> <span class="line-height-1 smaller-90"> Projects </span>
                            </a> <a href="#" class="btn btn-app btn-sm btn-pink">
                                <span class="line-height-1 bigger-170"> 4 </span> <br>
                                <i class="menu-icon fa icon_tag"></i> <span class="line-height-1 smaller-90"> Tickets </span>
                            </a> <a href="#" class="btn btn-app btn-sm btn-grey">
                                <span class="line-height-1 bigger-170"> 23 </span> <br>
                                <i class="menu-icon fa icon_contacts_alt"></i> <span class="line-height-1 smaller-90"> Contacts </span>
                            </a>
                             @{Html.RenderAction("_CountLog", "Log", new { area = "Admin", tenantId = @Model.TenantId });}
                        </div>
                        <div class="space-12"></div>
                        <div class="profile-user-info profile-user-info-striped">
                           
                            <div class="profile-info-row">
                                <div class="profile-info-name"> @Html.DisplayNameFor(x => x.FullName) <span class="bigger-120 red">*</span></div>
                                <div class="profile-info-value text-left bolder">@Html.DisplayFor(x => x.FullName)</div>
                            </div>
                            <div class="profile-info-row">
                                <div class="profile-info-name"> @Html.DisplayNameFor(x => x.Username) <span class="bigger-120 red">*</span></div>
                                <div class="profile-info-value text-left bolder">@Html.DisplayFor(x => x.Username)</div>
                            </div>
                            <div class="profile-info-row">
                                <div class="profile-info-name"> @Html.DisplayNameFor(x => x.DisplayName) </div>
                                <div class="profile-info-value text-left">@Html.DisplayFor(x => x.DisplayName)</div>
                            </div>
                            <div class="profile-info-row">
                                <div class="profile-info-name"> @Html.DisplayNameFor(x => x.Email)</div>
                                <div class="profile-info-value text-left">@Html.DisplayFor(x => x.Email)</div>
                            </div>
                            <div class="profile-info-row">
                                <div class="profile-info-name"> @Html.DisplayNameFor(x => x.Phone)</div>
                                <div class="profile-info-value text-left">@Html.DisplayFor(x => x.Phone)</div>
                            </div>
                            <div class="profile-info-row">
                                <div class="profile-info-name"> @Html.DisplayNameFor(x => x.Mobile)</div>
                                <div class="profile-info-value text-left">@Html.DisplayFor(x => x.Mobile)</div>
                            </div>
                            <div class="profile-info-row">
                                <div class="profile-info-name"> @Html.DisplayNameFor(x => x.Active)</div>
                                <div class="profile-info-value text-left">@Html.CheckBoxFor(model => Active, new { @disabled = "disabled" })</div>
                            </div>
                            <div class="profile-info-row">
                                <div class="profile-info-name"> Group</div>
                                <div class="profile-info-value text-left">@Html.DisplayFor(mode => mode.RoleName)</div>
                            </div>
                        </div>
                        <div class="space-6"></div>
                        <div class="align-right">
                            <div class="wr_btn_action">
                                <input type="button" class="back_big" value="Back" onclick="cancel();" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="TenantId" style="display:none">@Model.TenantId</div>
@section scripts{
    <script>
        function cancel() {
            var siteUrl = "/admin/user/Index/" + $(".TenantId").text();
            window.location = siteUrl;
        }
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.manageUserCL').click();
        });
    </script>
}