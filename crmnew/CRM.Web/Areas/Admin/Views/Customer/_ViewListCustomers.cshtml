@model IEnumerable<CRM.Entities.Models.crm_Customers>

@if (Model.Count()>0)
{
    <div class="row">
        <div class="col-xs-12" id="grid" style="padding:0; margin:0">
            <table class="table table-striped table-bordered table-hover mb0 mt30">
                <colgroup>
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                </colgroup>
                <thead class="k-grid-header">
                    <tr>
                        <th class="k-header" scope="col">Name</th>
                        <th class="k-header" scope="col">Address</th>
                        <th class="k-header" scope="col">Email</th>
                        <th class="k-header" scope="col">Phone</th>
                        <th class="k-header" scope="col">Website</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class="t-no-data">
                            <td role="gridcell">@item.CustomerName</td>
                            <td role="gridcell">item.Address</td>
                            <td role="gridcell">@item.Email</td>
                            <td role="gridcell">item.Phone</td>
                            <td role="gridcell">@item.Website</td>
                        </tr>
                    }
                </tbody>
            </table>
            <input type="hidden" id="confirmDialogTitle" value="Information" />
        </div>
    </div>
}