@model IEnumerable<CRM.Entities.Models.crm_Tenants>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    <input type="text" id="keyword" />
    <input type="button" value="Search" id="btn_search" />
    <input type="button" value="Delete selected record(s)" class="js-btn-delete-selected delete_big" id="btn_search" />
</div>
<div class="k-widget k-grid table_all table_line table_hover" id="grid">
    <table>
        <colgroup>
            <col style="width: auto;" />
            <col />
            <col />
            <col />
            <col />
            <col />
            <col style="width: 120px" />
        </colgroup>
        <thead class="k-grid-header">
            <tr>
                <th class="k-header" data-field="" data-title="" scope="col">
                    <input id='allchecked' class='css-checkbox' type='checkbox' />
                    <label for='allchecked' class='css-labelcheck text_hide'></label>
                </th>
                <th class="k-header" data-field="TenantName" data-title="TenantName" scope="col">TenantName</th>
                <th class="k-header" data-field="TenantNameAlias" data-title="TenantNameAlias" scope="col">TenantNameAlias</th>
                <th class="k-header" data-field="DbName" data-title="DbName" scope="col">DbName</th>
                <th class="k-header" data-field="DbUsername" data-title="DbUsername" scope="col">DbUsername</th>
                <th class="k-header" data-field="Phone" data-title="Phone" scope="col">Phone</th>
                <th class="k-header" scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr class="t-no-data">
                <td colspan="8"></td>
            </tr>
        </tbody>
    </table>
    <input type="hidden" id="confirmDialogTitle" value="Information" />
    @{Html.RenderPartial("~/Areas/Admin/Views/Shared/_GridPager.cshtml");}
</div>
<script type="text/x-kendo-template" id="delete-confirmation">
    <div id="modal">

        <p class="prompt-mess">Do you want to delete this record?</p>
        <div class="wr_bottom_popup_s">
            <section class="wr_btn_pp">
                <button class="delete-confirm btn_delete" type="button">Delete</button>
            </section>
            <section class="wr_btn_pp">
                <button class="delete-cancel btn_cancel" type="button">Cancel</button>
            </section>
        </div>
    </div>
</script>
