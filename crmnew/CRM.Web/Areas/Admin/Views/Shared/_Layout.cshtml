<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <title>@ViewBag.Title</title>
    @Html.Partial("_Head.Master")
    @RenderSection("styles", required: false)
    <style>
        .activeCL {
            color: #266cad !important;
            background-color: #f1f5f9 !important;
        }
    </style>
</head>
<body class="no-skin">
    <div id="navbar" class="navbar navbar-default">
        @Html.Partial("_HeaderPartial")
    </div>
    <div class="main-container" id="main-container">
        <div id="sidebar" class="sidebar  responsive">
            @Html.Partial("_LeftPartial")
        </div>
        <div class="main-content">
            @RenderBody()
        </div>
        <div class="footer">
            @Html.Partial("_FooterPartial")
        </div>
        <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse"> <i class="multi-icon fa icon-only bigger-110"></i> </a>
    </div>
    @Scripts.Render("~/bundles/Multiorg_footer_script")
    @Scripts.Render("~/bundles/Multiorg_validate_script")
    @RenderSection("scripts", required: false)

    @*Message box confirm*@
    <input type="hidden" id="confirmDialogTitleDefault" value="Information" />
    <input type="hidden" id="confirmDialogContentDefault" value="Do you want to delete this record?" />

    <script type="text/x-kendo-template" id="confirmationPublic">
        <div id="modal">
            <h4><span></span></h4>
            <div class="wr_bottom_popup_s mt30 Msgconfirm" style="display:none;">
                <section class="wr_btn_action">
                    <button class="cancelMsg cancel_big" type="button">No</button>
                </section>
                <section class="wr_btn_action">
                    <button class="confirmMsg save_big" type="button">Yes</button>
                </section>
            </div>
            <div class="BoxShowError" style="display:none;">
                <div class="wr_bottom_popup_s_1 MsgErr">
                </div>
                <div class="wr_bottom_popup_s">
                    <section class="wr_btn_action">
                        <button class="cancelError ok_big" type="button">OK</button>
                    </section>
                </div>
            </div>

            <div class="wr_bottom_popup_s mt30 MsgOk" style="display:none;">
                <section class="wr_btn_action">
                    <button class="okMsg ok_big" type="button">OK</button>
                </section>
            </div>
        </div>
    </script>

</body>
</html>